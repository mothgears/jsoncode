{
  "name": "jsoncode",
  "version": "1.0.0",
  "description": "JSON with conditional statements",
  "author": "Artem Varshavin",
  "license": "MIT",
  "keywords": [
    "json",
    "conditional statements",
    "logical tree",
    "switch",
    "if"
  ],
  "main": "jsoncode.min.js",
  "scripts": {
    "test": "cross-env NODE_ENV=development jest",
    "build": "babel jsoncode.js --presets env,minify --out-file jsoncode.min.js | cross-env NODE_ENV=production jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mothgears/jsoncode.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.0",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.(js?(x))",
      "**/?(*.)(spec|test).(js?(x))"
    ]
  },
  "dependencies": {}
}
