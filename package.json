{
  "name": "jsoncode",
  "version": "1.12.3",
  "description": "JSON with conditional statements",
  "author": "Artem Varshavin",
  "license": "MIT",
  "keywords": [
    "json",
    "conditional statements",
    "logical tree",
    "switch",
    "if",
    "spread"
  ],
  "browser": "jsoncode.lib.js",
  "main": "jsoncode.lib.mjs",
  "scripts": {
    "prepublishOnly": "babel jsoncode.lib.mjs --out-file jsoncode.lib.js",
    "build": "babel jsoncode.lib.mjs --out-file jsoncode.lib.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mothgears/jsoncode.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "cross-env": "^6.0.3",
    "jest": "^27.5.0",
    "jest-esm-transformer": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "mjs",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.(js|mjs)"
    ],
    "transform": {
      ".mjs": "jest-esm-transformer"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.17.0",
    "core-js": "^3.21.0"
  }
}
