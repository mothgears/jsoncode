{
  "name": "jsoncode",
  "version": "0.1.7",
  "description": "JSON with conditional statements",
  "author": "Artem Varshavin",
  "license": "MIT",
  "keywords": [
    "json",
    "conditional statements",
    "logical tree",
    "switch",
    "if"
  ],
  "main": "jsoncode.min.js",
  "scripts": {
    "test": "NODE_ENV=development jest",
    "build": "babel jsoncode.js --presets env,minify --out-file jsoncode.min.js | NODE_ENV=production jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mothgears/jsoncode.git"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.3",
    "jest": "^21.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/tests/**/*.(js?(x))",
      "**/?(*.)(spec|test).(js?(x))"
    ]
  }
}
